# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=4000
NODE_ENV=development

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
# Frontend URL for CORS (REQUIRED)
FRONTEND_URL=http://localhost:5173

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# MongoDB Atlas URI (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/algobell?retryWrites=true&w=majority

# ==========================================
# JWT AUTHENTICATION
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/Disable features
ENABLE_WHATSAPP=false
ENABLE_PRO_FEATURES=false
ENABLE_CONTESTS=true
ENABLE_BATTLES=true

# ==========================================
# THIRD-PARTY SERVICES
# ==========================================
# Judge0 API for code execution (Optional)
JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com
JUDGE0_API_KEY=

# Clist.by API for contest data (Optional - fallback if Kontests fails)
# Get your API key from: https://clist.by/api/v4/doc/
CLIST_USERNAME=
CLIST_API_KEY=

# Twilio WhatsApp (Optional - for WhatsApp reminders)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# Redis for caching (Optional)
REDIS_URL=

# ==========================================
# CONTEST REMINDER SETTINGS
# ==========================================
# Reminder offsets in minutes (comma-separated)
REMINDER_OFFSETS=60,30,15,5

# Cron schedule for checking reminders (every minute by default)
REMINDER_CRON_SCHEDULE=* * * * *

# ==========================================
# API RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
